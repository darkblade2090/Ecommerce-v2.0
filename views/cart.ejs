<%- include("partials/header"),{user : user} %>
<%- include("partials/nav"),{user : user}%>

<link rel="stylesheet" href="/styles/style.css">

<section class="h-100 gradient-custom" min-height="100px">
    <div class="container py-5" >
      <div class="row d-flex justify-content-center my-4">
        <div class="col-md-8">
        <%if(user.message!=''|| products.length==0) {%>
            <div class="h d-inline-block" >
            <h3><%=user.message%></h3>
        </div>
        <%} else {%>
          <div class="card mb-4">
            <div class="card-header py-3">
              <h5 class="mb-0">Cart - <%=products.length%> items</h5>
            </div>
            <div class="card-body">
            <!--Variable for cost-->
            <%let totalSum=0%>
              <!-- Single item -->
              <% products.forEach((products)=> {  %>
                    <div class="row">
                        <div class="col-lg-3 col-md-12 mb-4 mb-lg-0">
                        <!-- Image -->
                        <div class="bg-image hover-overlay hover-zoom ripple rounded" data-mdb-ripple-color="light">
                            <img src="/products/<%=products.productImg%>"
                            class="w-100" alt="Blue Jeans Jacket" />
                            <a href="#!">
                            <div class="mask" style="background-color: rgba(251, 251, 251, 0.2)"></div>
                            </a>
                        </div>
                        <!-- Image -->
                        </div>
        
                        <div class="col-lg-5 col-md-6 mb-4 mb-lg-0">
                        <!-- Data -->
                        
                        <!-- Delete -->
                        <p><strong><%=products.productName%></strong></p>
                        <a href="cart/removeItem/<%=products.productId%>" type="button" class="btn btn-danger btn-sm me-1 mb-2" data-mdb-toggle="tooltip"
                            title="Remove item">
                            <i class="fas fa-trash danger" ></i>
                        </a>
                         <!-- Delete -->

                        <!-- Data -->
                        </div>
        
                        <div class="col-lg-4 col-md-6 mb-4 mb-lg-0">
                        <!-- Quantity -->
                        <div class="d-flex mb-4" style="max-width: 300px">
                            <a href='/user/cart/quantityUpdate/<%=products.productId%>/-1' class="btn btn-primary px-3 me-2">
                            <i class="fas fa-minus"></i>
                          </a>
        
                            <div class="form-outline">
                            <input id="form1" min="1" max="10"" name="quantity" value="<%=products.quantity%>" type="Number" disabled class="form-control" />
                            <label class="form-label" for="form1">Quantity</label>
                            </div>
        
                            <a href='/user/cart/quantityUpdate/<%=products.productId%>/+1' class="btn btn-primary px-3 ms-2">
                            <i class="fas fa-plus"></i>
                            </a>
                        </div>
                        <!-- Quantity -->
        
                        <!-- Price -->
                        <p class="text-start text-md-center">
                          <%totalSum+=(products.price)*(products.quantity)%>
                            <strong>Rs. <%=products.price%></strong>
                        </p>
                        <!-- Price -->
                        </div>
                    </div>
              <!-- Single item -->
                   
              <hr class="my-4" />
              <%})%> 
              
            </div>
          </div>
          
          <div class=" mb-4">
            
          </div>
          <div class=" mb-4 mb-lg-0">
            
          </div>
        </div>
        <div class="col-md-4">
          <div class="card mb-4">
            <div class="card-header py-3">
              <h5 class="mb-0">Summary</h5>
            </div>
            <div class="card-body">
              <ul class="list-group list-group-flush">
                <%products.forEach((products)=> {%>
                <li
                   class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 pb-0">
                  <div>
                   <%=products.productName%> => QTY : <%=products.quantity%>
                  
                  <span>Rs. <%=(products.price*products.quantity)%></span>
                  <%})%>
                  </div>
                </li>
                <!--<li class="list-group-item d-flex justify-content-between align-items-center px-0">
                  Shipping
                  <span>Gratis</span>
                </li>-->
                <li
                  class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 mb-3" id="summaryItems">
                  <div>
                    <strong>Total amount</strong>
                    <strong>
                      <p class="mb-0">(including Taxes)</p>
                    </strong>
                  </div>
                  <span id="totalSum"><strong>Rs. <%=totalSum%></strong></span>
                </li>
              </ul>
  
              <button type="button" class="btn btn-primary btn-lg btn-block">
                Go to checkout
              </button>
            </div>
          </div>
        </div>
        <%}%> 
      </div>
    </div>
  </section>

<%- include('partials/footer') %>